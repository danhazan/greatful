# Production Environment Configuration Example
# Copy this file to .env.production and update with your production values

# Environment
ENVIRONMENT=production

# Database Configuration
DATABASE_URL=postgresql+asyncpg://username:password@host:port/database

# Security Configuration
SECRET_KEY=your-super-secure-secret-key-at-least-32-characters-long
ACCESS_TOKEN_EXPIRE_MINUTES=60
REFRESH_TOKEN_EXPIRE_DAYS=30

# CORS Configuration
ALLOWED_ORIGINS=https://yourdomain.com,https://www.yourdomain.com

# Frontend Configuration
FRONTEND_BASE_URL=https://yourdomain.com

# File Upload Configuration
MAX_UPLOAD_SIZE=10485760  # 10MB in bytes
UPLOAD_PATH=/var/uploads/grateful

# Rate Limiting Configuration (optional overrides)
DEFAULT_RATE_LIMIT=100
AUTH_RATE_LIMIT=10
UPLOAD_RATE_LIMIT=20

# Logging Configuration
LOG_LEVEL=INFO
SECURITY_LOG_LEVEL=INFO

# SSL/TLS Configuration
SSL_REDIRECT=true
HSTS_MAX_AGE=31536000

# Content Security Policy Domains
CSP_DOMAINS=https://yourdomain.com https://www.yourdomain.com

# External Services (if applicable)
# REDIS_URL=redis://localhost:6379/0
# SENTRY_DSN=your-sentry-dsn-here
# ANALYTICS_API_KEY=your-analytics-key-here

# Email Configuration (if applicable)
# SMTP_HOST=smtp.yourdomain.com
# SMTP_PORT=587
# SMTP_USERNAME=noreply@yourdomain.com
# SMTP_PASSWORD=your-smtp-password
# SMTP_TLS=true

# Monitoring and Health Checks
HEALTH_CHECK_TOKEN=your-health-check-token

# Feature Flags
ENABLE_REGISTRATION=true
ENABLE_FILE_UPLOADS=true
ENABLE_NOTIFICATIONS=true