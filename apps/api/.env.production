# Production Environment Configuration for Railway Deployment
# This file contains production-specific environment variables

# Environment
ENVIRONMENT=production

# Database Configuration (Railway PostgreSQL)
# These will be automatically set by Railway from the PostgreSQL service
# DATABASE_URL=postgresql://user:password@host:port/database

# OAuth Configuration - MUST be configured in Railway dashboard
# Google OAuth (Required)
# GOOGLE_CLIENT_ID=your-production-google-client-id
# GOOGLE_CLIENT_SECRET=your-production-google-client-secret

# Facebook OAuth (Optional)
# FACEBOOK_CLIENT_ID=your-production-facebook-client-id
# FACEBOOK_CLIENT_SECRET=your-production-facebook-client-secret

# OAuth Security
OAUTH_STATE_SECRET=your-production-oauth-state-secret-key-here
OAUTH_SESSION_TIMEOUT=600
OAUTH_STATE_EXPIRY=300

# Frontend and Backend URLs
FRONTEND_URL=https://grateful-net.vercel.app
BACKEND_URL=https://grateful-production.up.railway.app

# Custom Domain (Optional)
# CUSTOM_DOMAIN=https://yourdomain.com

# Security Configuration
SECRET_KEY=your-production-secret-key-here
JWT_SECRET_KEY=your-production-jwt-secret-key-here
JWT_ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30
REFRESH_TOKEN_EXPIRE_DAYS=7

# CORS Configuration (automatically configured from URLs above)
# Additional origins can be added via CUSTOM_DOMAIN

# Logging Configuration
LOG_LEVEL=INFO
STRUCTURED_LOGGING=true

# Performance Configuration
DB_POOL_SIZE=10
DB_MAX_OVERFLOW=20
DB_POOL_TIMEOUT=30

# Rate Limiting
RATE_LIMIT_ENABLED=true
RATE_LIMIT_REQUESTS_PER_MINUTE=60

# Security Headers
SECURITY_HEADERS_ENABLED=true
HSTS_MAX_AGE=31536000
CONTENT_SECURITY_POLICY_ENABLED=true

# Health Check Configuration
HEALTH_CHECK_ENABLED=true
HEALTH_CHECK_DATABASE=true

# Monitoring and Analytics
SENTRY_DSN=your-sentry-dsn-here
ANALYTICS_ENABLED=true

# Email Configuration (if needed for notifications)
# SMTP_HOST=smtp.gmail.com
# SMTP_PORT=587
# SMTP_USERNAME=your-email@gmail.com
# SMTP_PASSWORD=your-app-password
# SMTP_USE_TLS=true

# File Upload Configuration
MAX_FILE_SIZE=10485760  # 10MB
ALLOWED_FILE_TYPES=image/jpeg,image/png,image/gif,image/webp

# Cache Configuration
REDIS_URL=redis://localhost:6379/0
CACHE_TTL=3600

# Feature Flags
OAUTH_ENABLED=true
REGISTRATION_ENABLED=true
EMAIL_VERIFICATION_REQUIRED=false