# Production Environment Configuration

# Production URLs (configured for deployment)
NEXT_PUBLIC_APP_URL=https://grateful-web.vercel.app
NEXT_PUBLIC_API_URL=https://grateful-production.up.railway.app

# OAuth Configuration (Production)
NEXT_PUBLIC_OAUTH_ENABLED=true
NEXT_PUBLIC_GOOGLE_OAUTH_ENABLED=true
NEXT_PUBLIC_FACEBOOK_OAUTH_ENABLED=false

# OAuth Redirect URLs (for frontend callbacks)
NEXT_PUBLIC_GOOGLE_CALLBACK_URL=https://grateful-web.vercel.app/auth/callback/google
NEXT_PUBLIC_FACEBOOK_CALLBACK_URL=https://grateful-web.vercel.app/auth/callback/facebook
NEXT_PUBLIC_SUCCESS_CALLBACK_URL=https://grateful-web.vercel.app/auth/callback/success
NEXT_PUBLIC_ERROR_CALLBACK_URL=https://grateful-web.vercel.app/auth/callback/error

# Environment
NODE_ENV=production
NEXT_PUBLIC_ENVIRONMENT=production

# Feature Flags
NEXT_PUBLIC_REGISTRATION_ENABLED=true
NEXT_PUBLIC_EMAIL_VERIFICATION_REQUIRED=false
NEXT_PUBLIC_ANALYTICS_ENABLED=true

# Security Configuration
NEXT_TELEMETRY_DISABLED=1
NEXT_PUBLIC_SECURE_COOKIES=true
NEXT_PUBLIC_SAME_SITE_COOKIES=none
NEXT_PUBLIC_CSRF_PROTECTION=true

# Performance Configuration
NEXT_PUBLIC_IMAGE_OPTIMIZATION=true
NEXT_PUBLIC_COMPRESSION_ENABLED=true
NEXT_PUBLIC_CDN_ENABLED=true

# API Configuration
NEXT_PUBLIC_API_TIMEOUT=30000
NEXT_PUBLIC_RETRY_ATTEMPTS=3
NEXT_PUBLIC_RATE_LIMIT_ENABLED=true

# Monitoring and Analytics
NEXT_PUBLIC_SENTRY_DSN=your-frontend-sentry-dsn-here
NEXT_PUBLIC_ANALYTICS_ID=your-analytics-id-here
NEXT_PUBLIC_ERROR_REPORTING=true

# UI Configuration
NEXT_PUBLIC_THEME=light
NEXT_PUBLIC_LANGUAGE=en
NEXT_PUBLIC_TIMEZONE=UTC

# File Upload Configuration
NEXT_PUBLIC_MAX_FILE_SIZE=10485760
NEXT_PUBLIC_ALLOWED_FILE_TYPES=image/jpeg,image/png,image/gif,image/webp

# Social Sharing
NEXT_PUBLIC_SOCIAL_SHARING_ENABLED=true
NEXT_PUBLIC_OG_IMAGE_URL=https://grateful-web.vercel.app/og-image.png

# Build Configuration
NEXT_PUBLIC_BUILD_TIME=2025-01-08T00:00:00Z
NEXT_PUBLIC_VERSION=1.0.0

# Custom Domain Support
# NEXT_PUBLIC_CUSTOM_DOMAIN=https://yourdomain.com